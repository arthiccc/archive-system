{
  "name": "College Document Archive System",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
  "postCreateCommand": "pip install --quiet -r requirements.txt && python scripts/init-db.py",
  "postStartCommand": "python run.py &",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-json",
        "mtxr.sqltools"
      ]
    }
  },
  "portsAttributes": {
    "5000": {
      "label": "Flask Application",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "10gb"
  },
  "remoteUser": "root"
}
