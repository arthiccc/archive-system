# Archive System Configuration

# Database
DB_PASSWORD=change_this_secure_password
DATABASE_URL=postgresql://archive_admin:change_this_secure_password@db:5432/archive_db

# Application
SECRET_KEY=change_this_to_a_random_secure_key
FLASK_APP=app.py
FLASK_ENV=development
APP_DEBUG=true

# File Storage
UPLOAD_FOLDER=/data/docs
MAX_CONTENT_LENGTH=104857600  # 100MB
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png

# Search
SEARCH_RESULTS_PER_PAGE=25

# Audit
AUDIT_LOG_ENABLED=true
