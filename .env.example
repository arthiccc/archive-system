# Archive System Configuration
#
# For GitHub Codespaces/Development (SQLite - No Docker needed):
# DATABASE_URL=sqlite:///archive.db
#
# For Production (PostgreSQL with Docker):
# DATABASE_URL=postgresql://archive_admin:your_password@db:5432/archive_db
# DB_PASSWORD=your_secure_password

# Database
DATABASE_URL=sqlite:///archive.db
DB_PASSWORD=change_this_secure_password

# Application
SECRET_KEY=dev-secret-key-change-in-prod
FLASK_ENV=development
APP_DEBUG=true

# File Storage
UPLOAD_FOLDER=./data/docs
MAX_CONTENT_LENGTH=104857600  # 100MB
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png

# Search
SEARCH_RESULTS_PER_PAGE=25

# Audit
AUDIT_LOG_ENABLED=true
